<%- include('../partials/headerAuth'); %>
<main class="register">
  <div class="container">
    <div class="register__form">
      <form action="/users/login" method="post">
        <h2>Login to your dashboard</h2>
        <p class="text-muted <%= errors.errormessage ? 'text-danger' : '' %>"><%= errors.errormessage ? errors.errormessage : '' %></p>
        <div class="row g-2 mb-4">
        <div class=" col">
          <label for="email" class="form-label">Email address</label>
          <input type="text" name="email" value="<%= body.email ? body.email : '' %>" class="form-control <%= errors.email ? 'is-invalid' : '' %>" id="email" placeholder="name@example.com">
          <div class="invalid-feedback">
            <%= errors.email ? errors.email : '' %>
          </div>
        </div> 
        </div>
        <div class="row g-2 mb-4">
          <div class=" col">
          <label for="password" class="form-label">Password</label>
          <input type="password" value="<%= body.password ? body.password : '' %>" name="password" class="form-control <%= errors.password ? 'is-invalid' : '' %>" id="password" placeholder="**********">
          <div class="invalid-feedback">
            <%= errors.password ? errors.password : '' %>
          </div>
        </div>  
        </div>
        <div class="row g-2 mb4">
          <button class="btn btn-primary" type="submit">Login</button>
       </div> 
      </form>
    </div>
  </div>
</main>
<script src="/scripts/bootstrap.bundle.js"></script>
</body>
</html>